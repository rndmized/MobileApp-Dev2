<Page
    x:Class="Arkanoid.UserSelectionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Arkanoid"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Border BorderThickness="5" BorderBrush="LimeGreen">
            <Border.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/GameImages/background_2.jpg"/>
            </Border.Background>
            <StackPanel x:ConnectionId='1' Orientation="Vertical" x:Name="spMainPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border BorderThickness="2" BorderBrush="LimeGreen" Margin="10">
                    <ScrollViewer VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto" Height="130" Width="Auto">
                        <StackPanel x:ConnectionId='7' Orientation="Vertical" x:Name="spUserListPanel">
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                <Border BorderThickness="2" BorderBrush="LimeGreen" Margin="10">
                    <StackPanel x:ConnectionId='4' Orientation="Horizontal" x:Name="spButtonsPanel" Margin="10">
                        <Button x:ConnectionId='5' x:Name="btnAddUser" Content="Add new Profile" Margin="10"></Button>
                        <Button x:ConnectionId='6' x:Name="btnStartGame" Content="Start Game" Margin="10"></Button>
                    </StackPanel>
                </Border>
                <Border BorderThickness="2" BorderBrush="LimeGreen" Margin="10">
                    <StackPanel x:ConnectionId='2' x:Name="spCurrentUser">
                        <TextBlock x:ConnectionId='3' x:Name="tblcurrentUser" Foreground="LimeGreen">Current Profile:</TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>

